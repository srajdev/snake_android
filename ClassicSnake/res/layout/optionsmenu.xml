<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/om_bgrd_theme_control"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/classic"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
 	
 	<ImageView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_marginLeft="80dp"
            android:src="@drawable/logo" />
 	
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp" >
        
        <ImageView
                android:id="@+id/imgViewPlayerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@drawable/options_player_name" />

        <EditText
            android:id="@+id/editview_playername"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"           
            android:background="@android:color/transparent"
            android:lines="1"
            android:maxLines="1"
            android:maxLength="10"
            android:singleLine="true"
            android:text="Player1"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:textStyle="bold" />
		</LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp">
			
            <ImageView
                android:id="@+id/imgViewArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="220dp"
                
                android:src="@drawable/options_arrow" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp">
			
            <ImageView
                android:id="@+id/imgViewArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="220dp"
             
                android:src="@drawable/options_taptochange" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp">
			
            <ImageView
                android:id="@+id/imgViewWallpaper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="60dp" 
                android:src="@drawable/options_wallpaper" />
            
            <ImageView
                android:id="@+id/imgViewStandard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp" 
                android:src="@drawable/theme_standard" />

            <ImageView
                android:id="@+id/imgViewGarden"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="45dp" 
                android:src="@drawable/txt_garden" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="10dp" >

            <ImageView
                android:id="@+id/imgViewBeach"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/txt_beach" />
			
            <ImageView
                android:id="@+id/imgViewNight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:src="@drawable/txt_night" />
        </LinearLayout>

