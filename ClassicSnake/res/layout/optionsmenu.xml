	<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp" >

            <ImageView
                android:id="@+id/imgViewColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/options_snake_color" />
 	
        <RadioGroup
            android:id="@+id/om_vibrate_radiogroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/om_color_radiobtn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/snake_color_green_selector"
                android:checked="true"
                android:onClick="onRadioButtonClicked" />

            <RadioButton
                android:id="@+id/om_color_radiobtn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:button="@drawable/snake_color_orange_selector"
                android:onClick="onRadioButtonClicked" />

            <RadioButton
                android:id="@+id/om_color_radiobtn3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:button="@drawable/snake_color_yellow_selector"
                android:onClick="onRadioButtonClicked" />

            <RadioButton
                android:id="@+id/om_color_radiobtn4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:button="@drawable/snake_color_blue_selector"
                android:onClick="onRadioButtonClicked" />
        </RadioGroup>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/om_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >
    </FrameLayout>

