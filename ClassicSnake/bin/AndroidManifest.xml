        <activity
            android:name="com.zing.snakeclassic.OptionDialog"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name="com.zing.snakeclassic.SpeedDialog"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name="com.zing.snakeclassic.UnlockCredit"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.zing.snakeclassic.EarnCredit"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.zing.snakeclassic.UseCredit"
            android:screenOrientation="portrait" >
